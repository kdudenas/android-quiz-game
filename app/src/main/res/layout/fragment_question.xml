<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs407_android.QuizGame.QuestionFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center">

        <TextView
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="@string/text_question"
            android:id="@+id/text_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1 whole step"
            android:id="@+id/button1"
            android:layout_marginLeft="20dp" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="2 whole steps"
            android:id="@+id/button2"
            android:layout_marginLeft="20dp" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="4 whole steps"
            android:id="@+id/button4"
            android:layout_marginLeft="20dp" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="8 whole steps"
            android:id="@+id/button8"
            android:layout_marginLeft="20dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/submitBtnStr"
            android:id="@+id/submitButton"
            android:layout_marginTop="30dp"
            android:background="#76dbff" />
    </LinearLayout>

</FrameLayout>
